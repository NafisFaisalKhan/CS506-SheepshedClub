extends layout

block content
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/index.css")

    section.container-fluid.my-container#page_container
        div.row.my-row#photos Photos

        div.row.justify-content-between#boxes
          div.col-5.my-col#small_boxes
              div.row.my-row#scores_box
                div.row.box-title-row
                    div.col.box-title
                        div.box_title.text-center Scores
                div.row.box-content.justify-content-around
                    div.col-10
                        p.
                            Check out this weeks point totals to see how you
                            stack up against everyone this semester!
                        br
                        a.button(href="/scores") Check Out Scores
                        br

              div.row.my-row#rules_box
                div.row.box-title-row
                    div.col.box-title
                        div.box_title.text-center Cheat Sheet
                div.row.box-content.justify-content-around
                    div.col-10
                        p.
                            Played before but can't remember card ranks? Look at this
                            little cheat sheet to get you back up to speed.
                        br
                        a.button(href="/rules") I Could Use a Little Help
                        br


              div.row.my-row#tutorials_box
                div.row.box-title-row
                    div.col.box-title
                        div.box_title.text-center Tutorials
                div.row.box-content.justify-content-around
                    div.col-10
                        p.
                            New to the game? See if some of our tutorials
                            we've created for you help you pick up the game faster!
                        br
                        a.button(href="/rules") I Could Use a Little Help
                        br

              div.row.my-row#about_box
                div.row.box-title-row
                    div.col.box-title
                        div.box_title.text-center About
                div.row.box-content.justify-content-around
                    div.col-10
                        p.
                            The sheepshead club at UW Madison has been around
                            for 10,000 years...
                        br
                        a.button(href="/about") Read More
                        br

          div.col-5.my-col#announcements_box
            span.box_title Announcements

        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")
